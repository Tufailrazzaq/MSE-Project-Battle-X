<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/csgo"
            android:tag="counterStrike"
            android:onClick="competitionOnClick"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/pubgm"
            android:tag="pubg"
            android:onClick="competitionOnClick"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/soccer"
            android:tag="soapSoccer"
            android:onClick="competitionOnClick"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/programming2"
            android:tag="speedProgramming"
            android:onClick="competitionOnClick"
            />

    </LinearLayout>

</ScrollView>